        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :name %>
    <%= form.text_field :name, class: 'form-control' %>
  </div>

  <div class="field">
    <%= form.label :submission_deadline %>
    <%= form.datetime_select :submission_deadline, {}, html_options: { class: 'form-control' } %>
